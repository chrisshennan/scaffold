<div data-controller="waitlist" class="border-t-2 border-gray-200 dark:border-neutral-700 pt-6 mt-6">
    {{ form_start(form, { attr: { 'data-waitlist-target': 'form' }}) }}
        {{ form_row(form.email, {
            label: 'Sign up for our waitlist and we\'ll let you know as soon as you can create your own Noticeboard!',
            attr: { 'data-waitlist-target': 'email' }
        }) }}

        <div data-waitlist-target="successMessage" class="hidden bg-teal-100 border-t-4 border-teal-500 rounded-b text-teal-900 px-4 py-3 shadow-md mt-4" role="alert">
            <div class="flex">
                <div class="py-1">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-teal-500 mr-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                    </svg>
                </div>
                <div>
                    <p class="font-bold">Thank you!</p>
                    <p class="text-sm">You've been successfully added to the waitlist.</p>
                </div>
            </div>
        </div>

        <div data-waitlist-target="errorMessage" class="hidden bg-red-100 border-t-4 border-red-500 rounded-b text-red-900 px-4 py-3 shadow-md mt-4" role="alert">
            <div class="flex">
                <div class="py-1">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-red-500 mr-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" />
                    </svg>
                </div>
                <div>
                    <p class="font-bold">Aw dang! We've encountered an error</p>
                    <p class="text-sm">Please try again.  If the problems persist, please reach out to <a class="underline" href="mailto:{{ scaffold_site_contact_email }}">{{ scaffold_site_contact_email }}</a></p>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <div class="grid">
                <button data-waitlist-target="button" class="py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 focus:outline-hidden focus:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none">
                    {{ button_label|default('Join waitlist') }}
                </button>
            </div>
        </div>
    {{ form_end(form) }}
</div>
